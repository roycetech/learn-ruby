<h1>Listing Zombies</h1>



<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Text</th>
      <th>&nbsp;</th>
      <th>&nbsp;</th>
    </tr>
  </thead>
 <tbody>
  <% @zombies.each do |zombie| %>
    <tr>
      <td><%= link_to zombie.name, zombie_path(zombie) %></td>
      <td><%= zombie.graveyard %></td>
      <td><%= link_to 'Edit', edit_zombie_path(zombie) %></td>
      <td><%= link_to 'Delete', zombie_path(zombie),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  </tbody>
  <% end %>
</table>

<%= link_to 'Back', root_path %> | <%= link_to 'New Zombie', new_zombie_path %>

